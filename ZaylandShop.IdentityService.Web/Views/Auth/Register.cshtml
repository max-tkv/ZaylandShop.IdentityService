@using ZaylandShop.IdentityService.Controllers.ViewModels
@model RegisterViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/_Layout.cshtml";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">
            <form class="login100-form validate-form" asp-controller="Auth" asp-action="Register">
                <span class="login100-form-title p-b-55">
                    Регистрация
                </span>
                <input type="hidden" name="ReturnUrl" asp-for="ReturnUrl">
                <div class="wrap-input100 validate-input m-b-16" data-validate="Valid email is required: ex@abc.xyz">
                    <input class="input100" type="text" name="UserName" placeholder="Эл. почта" asp-for="UserName">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <span class="lnr lnr-envelope"></span>
                    </span>
                </div>

                <div class="wrap-input100 validate-input m-b-16" data-validate="Password is required">
                    <input class="input100" type="password" name="Password" placeholder="Пароль" asp-for="Password">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <span class="lnr lnr-lock"></span>
                    </span>
                </div>

                <div class="wrap-input100 validate-input m-b-16" data-validate="Password is required">
                    <input class="input100" type="password" name="ConfirmPassword" placeholder="Повторите пароль" asp-for="ConfirmPassword">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <span class="lnr lnr-lock"></span>
                    </span>
                </div>

                <div class="container-login100-form-btn p-t-25">
                    <button class="login100-form-btn">
                        Создать аккаунт
                    </button>
                </div>

                <div class="text-center w-full p-t-42 p-b-22">
                    <span class="txt1">
                        Или войдите с помощью
                    </span>
                </div>

                <a href="#" class="btn-face m-b-10">
                    <i class="fa fa-facebook-official"></i>
                    Facebook
                </a>

                <a href="#" class="btn-google m-b-10">
                    <img src="~/images/icons/icon-google.png" alt="GOOGLE">
                    Google
                </a>
            </form>
            <div class="text-center w-full p-t-115">
                <a class="txt1 bo1 hov1" href="@Url.Action("Login", "Auth", new { returnUrl = Model.ReturnUrl })">
                    Авторизоваться
                </a>
            </div>
        </div>
    </div>
</div>
